<% layout("/layouts/boilerplate") %>

<div class="row mt-2">
    <h1 class="col-6 offset-2">Login Wanderluster</h1>
    <div class="col-6 offset-2">
        <form action="/login" method="POST" class="need-validation" novalidate>
            <div class="mb-3 ">
                <label for="username" class="form-label">Username</label><br>
                <input type="text" name="username" placeholder="Enter a Username" class="form-control" id="username" required>
                
    
            </div>

            <div class="mb-3 ">
                <label for="password" class="form-label">Password</label><br>
                <input type="password" name="password" placeholder="Enter a password" class="form-control" id="password" required>
                
    
            </div>
            <button class="btn btn-success">Login</button>

        </form>
    </div>
</div>